def sum_array_index(arr, index=0):
    """
    Рекурсивная функция для подсчета суммы с использованием индексов
    
    Args:
        arr: список чисел
        index: текущий индекс (по умолчанию 0)
    
    Returns:
        int/float: сумма всех элементов массива
    """
    # Базовый случай: дошли до конца массива
    if index >= len(arr):
        return 0
    # Рекурсивный случай: текущий элемент + сумма оставшихся
    else:
        return arr[index] + sum_array_index(arr, index + 1)

# Примеры использования
print(sum_array_index([1, 2, 3, 4, 5]))      # 15
print(sum_array_index([10, 20, 30]))         # 60
