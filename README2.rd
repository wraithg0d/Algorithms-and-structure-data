def sum_array(arr):
    """
    Рекурсивная функция для подсчета суммы элементов массива
    
    Args:
        arr: список чисел
    
    Returns:
        int/float: сумма всех элементов массива
    """
    # Базовый случай: пустой массив
    if len(arr) == 0:
        return 0
    # Рекурсивный случай: первый элемент + сумма остальных
    else:
        return arr[0] + sum_array(arr[1:])

# Примеры использования
print(sum_array([1, 2, 3, 4, 5]))      # 15
print(sum_array([10, 20, 30]))         # 60
print(sum_array([5]))                  # 5
print(sum_array([]))                   # 0
